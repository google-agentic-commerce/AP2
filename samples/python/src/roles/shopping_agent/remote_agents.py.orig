"""Remote agents used by the Shopping Agent.

This module provides clients for interacting with remote agents.
"""

from common.payment_remote_a2a_client import PaymentRemoteA2aClient


credential_provider_client = PaymentRemoteA2aClient(
    name="credential_provider",
    base_url="http://localhost:8002/a2a/credential_provider",
    required_extensions={
        "https://google-a2a.github.io/A2A/extensions/payments/v1",
    },
)


merchant_agent_client = PaymentRemoteA2aClient(
    name="merchant_agent",
    base_url="http://localhost:8001/a2a/merchant_agent",
    required_extensions={
        "https://google-a2a.github.io/A2A/extensions/payments/v1",
    },
)
